<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>sc.fiji</groupId>
		<artifactId>pom-fiji</artifactId>
		<version>5.1</version>
	</parent>

	<artifactId>pom-bigdataviewer</artifactId>
	<version>1.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>

	<name>BigDataViewer Projects</name>
	<description>parent pom for bigdataviewer projects</description>

	<properties>
		<jhdf5.version>13.06.2</jhdf5.version>
		<gson.version>2.2.4</gson.version>
		<jetty-server.version>9.1.3.v20140225</jetty-server.version>
		<spim_data.version>1.0.0-beta-3</spim_data.version>
		<bigdataviewer-core.version>1.0.0</bigdataviewer-core.version>
	</properties>

	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>cisd</groupId>
				<artifactId>jhdf5</artifactId>
				<version>${jhdf5.version}</version>
			</dependency>
			<dependency>
				<groupId>com.google.code.gson</groupId>
				<artifactId>gson</artifactId>
				<version>${gson.version}</version>
			</dependency>
			<dependency>
				<groupId>org.eclipse.jetty</groupId>
				<artifactId>jetty-server</artifactId>
				<version>${jetty-server.version}</version>
			</dependency>
			<dependency>
				<groupId>sc.fiji</groupId>
				<artifactId>spim_data</artifactId>
				<version>${spim_data.version}</version>
			</dependency>
			<dependency>
				<groupId>sc.fiji</groupId>
				<artifactId>bigdataviewer-core</artifactId>
				<version>${bigdataviewer-core.version}</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<profiles>
		<!-- developer profile: Use LATEST version of spim_data and bigdataviewer-core 
			 if file ~/.scijava/dev.bdv exists -->
		<profile>
			<id>dev.bdv</id>
			<activation>
				<file>
					<exists>${user.home}/.scijava/dev.bdv</exists>
				</file>
			</activation>
			<properties>
				<spim_data.version>LATEST</spim_data.version>
				<bigdataviewer-core.version>LATEST</bigdataviewer-core.version>
			</properties>
			<repositories>
				<repository>
					<id>imagej.public</id>
					<url>http://maven.imagej.net/content/groups/public</url>
				</repository>
			</repositories>
			<pluginRepositories>
				<pluginRepository>
					<id>imagej.public</id>
					<url>http://maven.imagej.net/content/groups/public</url>
					<snapshots>
						<enabled>true</enabled>
					</snapshots>
				</pluginRepository>
			</pluginRepositories>
		</profile>
	</profiles>

	<scm>
		<connection>scm:git:git://github.com/tpietzsch/pom-bigdataviewer</connection>
		<developerConnection>scm:git:git@github.com:tpietzsch/pom-bigdataviewer</developerConnection>
		<tag>HEAD</tag>
		<url>https://github.com/tpietzsch/pom-bigdataviewer</url>
	</scm>

	<repositories>
		<!-- NB: for project parent -->
		<repository>
			<id>imagej.public</id>
			<url>http://maven.imagej.net/content/groups/public</url>
		</repository>
	</repositories>
</project>
